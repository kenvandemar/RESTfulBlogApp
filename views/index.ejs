<% include ./partials/header%>

<div class="ui main text container">
    <div class="ui huge header">RESTful Blog App</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
                <% blogs.forEach(function(blog){%>
            <div class="item">
                <div class="image">
                    <img src="<%= blog. image%>">
                </div>
                <div class="content">
                    <a class="header" href="/blogs/<%= blog._id%>"><%= blog.title%></a> 
                    <div class="meta">
                       <span><%= blog.created.toDateString() %></span>
                    </div>
                    <div class="description">
                         <p>
                            <%if(typeof blog.body!== 'undefined' && blog.body.length > 100) { %>
                              <%= blog.body.substring(0, 100) %>
                              <%  } else { %>
                              <%=    blog.body  %>
                            <%  }; %>...
                        </p>
                    </div>
                    <div class="extra">
                        <a class="ui floated basic violet button" href="/blogs/<%= blog._id%>">
                            Readmore
                            <i class="right chevron icon"></i>
                        </a> 
                    </div>
                </div>
            </div>
       <% }) %>
        </div>
    </div>
</div>
<% include ./partials/footer%>